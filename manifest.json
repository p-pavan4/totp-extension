{
  "manifest_version": 3,
  "name": "TOTP",
  "version": "1.0",
  "description": "Generate and manage multiple TOTP codes using Base64 secrets.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "TOTP Manager"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open TOTP Manager"
    }
  },
  "permissions": [
    "storage",
    "clipboardWrite",
    "clipboardRead"
  ]
}